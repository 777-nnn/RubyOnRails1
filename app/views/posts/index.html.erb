<div class="container">
<div class="d-flex justify-content-between">
  <div class="h3">スケジュール一覧</div>
  <div><%= link_to "新規登録", :new_post, class:"btn btn-primary" %></div>
</div>

<% if flash[:notice] %>
  <p class="notice"><%= flash[:notice] %></p>
<% end %>

 <table class="table table-bordered text-center">
   <thead>
     <tr>
       <th>ID</th>
       <th>タイトル</th>
       <th>開始日</th>
       <th>終了日</th>
       <th>終日</th>
       <th>更新日時</th>
       <th>詳細</th>
       <th>編集</th>
       <th>削除</th>
     </tr>
   </thead>
 
   <tbody>
     <% @posts.each do |post| %>
       <tr>
         <td><%= post.id %></td>
         <td><%= post.title %></td>
         <td><%= post.start_date.strftime("%Y/%m/%d") %></td>
         <td><%= post.end_date.strftime("%Y/%m/%d") %></td>
         <td><% if post.is_all_day then %>
              <%= "◯" %>
            <% end %>
         </td>
         <td><%= post.updated_at.strftime("%Y/%m/%d %H:%M") %></td>
         <td>
           <%= link_to "詳細", post, class:"btn btn-primary" %>
         </td>
         <td>
           <%= link_to "編集", [:edit, post], class:"btn btn-success" %>
         </td>
         <td>
            <%= link_to '削除', post, method: :delete, data:
          { confirm: '本当に削除して良いですか?',
            cancel: 'やめる',
            commit: '削除する'}, title: '削除確認', class:"btn btn-danger" %>
         </td>
       </tr>
     <% end %>
   </tbody>
 </table>

<div class="fixed-bottom text-center">
<p class="footer">予定合計<%= Post.count %>件<br> 本日の日付<%= Time.zone.today.strftime("%Y/%m/%d") %></p>
</div>
</div>