<%= form_with model: @post do |f| %>
  <div class="container-fruid">

    <%= render 'shared/error_messages', model: f.object %>

    <h3>スケジュール編集</h3>

    <div class="row">
      <div class="col-2">
        <%= f.label :title ,"タイトル",class: "form-label" %>
        <%= f.text_field :title,class: "form-control" %>
        <%= f.label :start_date ,"開始日",class: "form-label" %>
        <%= f.date_field :start_date, value: Time.zone.today, min: @post.end_date, class: "form-control" %>
        <%= f.label :end_date ,"終了日",class: "form-label" %>
        <%= f.date_field :end_date, value: Time.zone.today, max: @post.start_date, class: "form-control" %>
      </div>
    </div>
    <div class="row">
      <div class="col-6">
        <label class="checkbox-inline">
          <%= f.check_box :is_all_day, class: "form-check-input" %>
          終日の場合はチェックを入れます
        </label>
      </div>
    </div>
    <div class="row">
      <div class="col-4">
        <%= f.label :schedule_memo ,"スケジュールメモ", class: "form-label" %>
        <%= f.text_area :schedule_memo, class: "form-control" %>
      </div>
    </div>
  </div>

  <div>
    <%= link_to "キャンセル", :posts, class: "btn btn-secondary btn-lg" %>
    <%= f.submit "保存", class: "btn btn-success btn-lg" %>
  </div>
  
<% end %>